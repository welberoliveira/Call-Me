@page
@model CallMe.Pages.Categorias.DeleteModel
@{
    ViewData["Title"] = "Excluir Categoria";
}

<h1>Excluir Aluno</h1>

<p class="text-danger">@Model.ErrorMessage</p>
<h4>Você tem certeza que deseja excluir essa Categoria? (Essa operação não pode ser desfeita)</h4>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria.Observacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Observacao)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Categoria.ID" />
        <a asp-page="./Index" class="btn btn-info">Voltar</a>
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>