@page
@model CallMe.Pages.PessoaStatuss.IndexModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "CallMe Status do Cliente";
}

@if (SignInManager.IsSignedIn(User))
{
    <h2>Status do Cliente</h2>

    <p>
        <a asp-page="Create" class="btn btn-primary">Cadastrar Novo Status do Cliente</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PessoaStatus.Nome)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PessoaStatuss)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-page="./Edit" asp-route-id="@item.Id">Alterar</a>
                        <a class="btn btn-info" asp-page="./Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
